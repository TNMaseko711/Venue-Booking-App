@{
    ViewData["Title"] = "Product Page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ABC Retail - Products</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<body>

    <div class="container">
        <h1>Our Products</h1>
        <div class="row">
            <div class="col-md-4">
                <div class="product-card">
                    <img src="https://images.samsung.com/is/image/samsung/assets/za/smartphones/galaxy-s23/galaxy-s23-highlights-kv.jpg?$ORIGIN_JPG$" class="product-image" alt="Product 1">
                    <div class="product-info">
                        <h3 class="product-title">Samsung Galaxy S23</h3>
                        <p class="product-price">R11,999</p>
                        <p class="product-description">Latest model with a high-resolution camera, fast Snapdragon 8 Gen 2 processor, and 128GB storage.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="product-card">
                    <img src="https://parempire.com/cdn/shop/articles/jacobs_1512x.jpg?v=1697721118" class="product-image" alt="Product 2">
                    <div class="product-info">
                        <h3 class="product-title">Jacobs coffee</h3>
                        <p class="product-price">R174.99</p>
                        <p class="product-description">Freshly roasted, fair-trade organic coffee beans with a rich, aromatic flavor.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="product-card">
                    <img src="https://www.fitbit.com/global/content/dam/fitbit/global/pdp/devices/charge-5/hero-static/charge5-black-device-3qtr.png" class="product-image" alt="Product 3">
                    <div class="product-info">
                        <h3 class="product-title">Fitbit Charge 5</h3>
                        <p class="product-price">R2,299</p>
                        <p class="product-description"> Wearable device with heart rate monitoring, GPS, sleep tracking, and fitness goal setting.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="product-card">
                    <img src="https://www.ikea.com/us/en/images/products/bekant-desk-white-stained-oak-veneer-white__1166217_pe891060_s5.jpg?f=s" class="product-image" alt="Product 4">
                    <div class="product-info">
                        <h3 class="product-title">IKEA Bekant Desk</h3>
                        <p class="product-price">R2,999</p>
                        <p class="product-description">Stylish and functional desk with adjustable height and ample storage space, ideal for home office setups.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="product-card">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSaPrpQ2-TUPKH3aGXBLPmzkNfVgbfTlPl8Cg&s" class="product-image" alt="Product 5">
                    <div class="product-info">
                        <h3 class="product-title">NutriBullet Pro 900</h3>
                        <p class="product-price">R1,499</p>
                        <p class="product-description">Compact, high-powered blender ideal for smoothies and shakes on-the-go, with a 900-watt motor.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
