<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ABC Retail - New Order</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>

    <div class="container">
        <h1>Place a New Order</h1>
        <form id="orderForm">
            <div class="form-group">
                <label for="customerName">Customer Name:</label>
                <input type="text" class="form-control" id="customerName" required>
            </div>

            <div class="form-group">
                <label for="customerEmail">Email:</label>
                <input type="email" class="form-control" id="customerEmail" required>
            </div>

            <div class="form-group">
                <label for="productSelection">Select Product:</label>
                <select class="form-control" id="productSelection" onchange="updatePrice()" required>
                    <option value="Product1" data-price="11999">Samsung Galaxy S23 - R11,999</option>
                    <option value="Product2" data-price="174.99">Jacobs Coffee - R174.99</option>
                    <option value="Product3" data-price="2299">Fitbit Charge 5 - R2,299</option>
                    <option value="Product4" data-price="2999">IKEA Bekant Desk - R2,999</option>
                    <option value="Product5" data-price="1499">NutriBullet Pro 900 - R1499</option>
                </select>
            </div>

            <div class="form-group">
                <label for="quantity">Quantity:</label>
                <input type="number" class="form-control" id="quantity" min="1" value="1" onchange="updateTotal()" required>
            </div>

            <div class="form-group">
                <label for="totalPrice">Total Price:</label>
                <input type="text" class="form-control" id="totalPrice" readonly>
            </div>

            <button type="submit" class="btn btn-primary">Place Order</button>
        </form>
    </div>

    <script>
        // Function to update price based on selected product and quantity
        function updatePrice() {
            const productSelect = document.getElementById('productSelection');
            const quantity = document.getElementById('quantity').value;
            const selectedOption = productSelect.options[productSelect.selectedIndex];
            const price = selectedOption.getAttribute('data-price');
            document.getElementById('totalPrice').value = 'R' + (price * quantity).toFixed(2);
        }

        function updateTotal() {
            updatePrice();
        }

        // Initial price update on page load
        window.onload = function () {
            updatePrice();
        };

        // Handle form submission
        document.getElementById('orderForm').addEventListener('submit', function (event) {
            event.preventDefault();
            // Here, you can add the logic to save the order information
            alert('Order placed successfully!');
        });
    </script>
</body>
</html>

